<Page x:Class="AttriRent.Views.Frames.AttributePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AttriRent.Views.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AttributePage">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Height="160" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" Margin="0,0,0,10">
                <Rectangle Fill="Gray" Width="150" Height="150"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="{Binding Name}"/>
                <TextBlock Text="{Binding Description, TargetNullValue=No description for this attribute}"/>
                <TextBlock Text="{Binding Price}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="GetRent" Height="30" Width="80" Command="{Binding GetRentCommand}" IsEnabled="{Binding IsRentEnable}" />
        </StackPanel>
    </Grid>
</Page>
